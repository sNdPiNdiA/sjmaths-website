{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "scripts/**",
      "README.md",
      "package.json",
      "package-lock.json"
    ],

    "cleanUrls": true,
    "trailingSlash": false,

    "rewrites": [
      {
        "source": "/classes/**",
        "destination": "/index.html"
      },
      {
        "source": "/pages/**",
        "destination": "/index.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],

    "headers": [
      {
        "source": "**/*.@(js|css|json|woff2|svg|png|jpg|jpeg|webp)",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
          { "key": "Pragma", "value": "no-cache" },
          { "key": "Expires", "value": "0" }
        ]
      }
    ]
  }
}
