{
  "name": "sjmaths-website",
  "version": "1.0.0",
  "description": "SJMaths - Master Mathematics Education Platform",
  "main": "index.html",
  "scripts": {
    "test": "node scripts/test-runner.js",
    "test:links": "node scripts/check-links.js",
    "test:security": "node scripts/security-check.js",
    "test:all": "npm run test && npm run test:links",
    "start": "live-server --port=5500 --open=/index.html",
    "format": "prettier --write \"**/*.{html,css,js,json}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json}\"",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "lint:fix": "eslint \"**/*.js\" --fix --ignore-pattern node_modules/",
    "validate:html": "html-validate \"**/*.html\" --ignore node_modules",
    "validate:css": "stylelint \"**/*.css\" --ignore-pattern node_modules",
    "lighthouse": "lighthouse http://localhost:5500 --view --output html --output-path ./reports/lighthouse.html",
    "build": "npm run format && npm run lint:fix && npm run test",
    "deploy": "npm run build && firebase deploy",
    "firebase:serve": "firebase serve",
    "pre-launch": "node scripts/pre-launch-checklist.js"
  },
  "keywords": [
    "education",
    "mathematics",
    "ncert",
    "cbse"
  ],
  "author": "SJMaths Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "html-validate": "^8.7.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "chalk": "^4.1.2"
  },
  "dependencies": {
    "firebase-tools": "^13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sNdPiNdiA/sjmaths-website.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/sNdPiNdiA/sjmaths-website/issues"
  },
  "homepage": "https://github.com/sNdPiNdiA/sjmaths-website#readme"
}
